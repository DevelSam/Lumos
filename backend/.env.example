# ==================================================
# Базовые настройки сервера
# ==================================================
PORT=5000
# Порт, на котором будет запущен Express-сервер

CLIENT_URL="http://localhost:5173"
# URL фронтенд-приложения (для CORS и ссылок в письмах)

API_URL="http://localhost:5000"
# Базовый URL API (используется в ссылках)

# ==================================================
# Настройки базы данных (MongoDB)
# ==================================================
# 
#
# Варианты подключения:
# 1. Локальная MongoDB без Docker: 
#    DB_URL="mongodb://localhost:27017/lumos?retryWrites=true&w=majority"
#
# 2. MongoDB на хосте при запуске бэкенда в Docker:
#    DB_URL="mongodb://host.docker.internal:27017/lumos?retryWrites=true&w=majority"
#
# ==================================================
# Настройки безопасности
# ==================================================
JWT_SECRET_KEY=your_strong_secret_here
# Секрет для подписи JWT токенов 
# ==================================================
# Настройки почтового сервиса (SMTP)
# ==================================================
SMTP_HOST=smtp.mail.ru
# SMTP-сервер почтового провайдера
# Примеры: smtp.mail.ru, smtp.gmail.com, smtp.yandex.ru
SMTP_PORT=465
# Порт SMTP (обычно 465 для SSL, 587 для TLS)
SMTP_USER=your_email@mail.ru
# Почтовый адрес для отправки писем
SMTP_PASSWORD=your_smtp_password
# Пароль приложения
